{
  "name": "@civic/spl-identity",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' ts-mocha test/**",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "build:program": "rm -f src/client/util/store/config.json; cargo build-bpf --manifest-path ../program/Cargo.toml",
    "cluster:localnet": "rm -f .env",
    "cluster:devnet": "cp cluster-devnet.env .env",
    "cluster:testnet": "cp cluster-testnet.env .env",
    "cluster:mainnet-beta": "cp cluster-mainnet-beta.env .env",
    "localnet:update": "solana-localnet update",
    "localnet:up": "rm -f src/client/util/store/config.json; set -x; solana-localnet down; set -e; solana-localnet up",
    "localnet:down": "solana-localnet down",
    "localnet:logs": "solana-localnet logs -f"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "author": "dankelleher",
  "module": "dist/js.esm.js",
  "size-limit": [
    {
      "path": "dist/js.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/js.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@solana/web3.js": "^0.86.1",
    "bn.js": "^5.0.0",
    "buffer-layout": "^1.2.0",
    "dotenv": "8.2.0",
    "mkdirp": "1.0.4"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.7.0",
    "@types/assert": "^1.5.2",
    "@types/bn.js": "^4.11.6",
    "@types/expect": "^24.3.0",
    "@types/mkdirp": "^1.0.1",
    "@types/mocha": "^8.0.3",
    "@types/mz": "^2.7.2",
    "chai": "^4.2.0",
    "dirty-chai": "^2.0.1",
    "husky": "^4.3.0",
    "mocha": "^8.2.0",
    "mz": "^2.7.0",
    "size-limit": "^4.7.0",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.0.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5"
  }
}
